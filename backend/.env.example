# Environment Variables for Backend (Railway)
# Copy values from your local .env file

# API Keys (REQUIRED)
GROQ_API_KEY=your_groq_api_key_here
PINECONE_API_KEY=your_pinecone_api_key_here

# Flask Configuration
FLASK_ENV=production
PORT=5000

# CORS Configuration
# Add your Vercel frontend URL after deployment
ALLOWED_ORIGINS=https://your-app.vercel.app,http://localhost:3002

# Security (Optional)
SECRET_KEY=your-secret-key-for-sessions
